{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Absence list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dateabsence</th>
                <th>Heureabsence</th>
                <th>Matiere</th>
                <th>Enseignant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('absence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dateabsence %}{{ entity.dateabsence|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.heureabsence|date('H:i:s') }}</td>
                <td>{{ entity.matiere }}</td>
                <td>{{ entity.enseignant }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('absence_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('absence_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('absence_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
