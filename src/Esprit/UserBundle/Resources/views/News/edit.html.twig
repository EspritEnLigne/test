{% extends '::base.html.twig' %}
{% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
      <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />

    {% endblock %}
{% block body -%}
    <h1>Modifier un article</h1>

    <form class="form-horizontal" action="{{ path('news_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
       <fieldset>
           <div class="control-group">
               <div class="controls"> 
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-success">Edit</button>
        </p></div>
           </div>
       </fieldset>
    </form>

        <ul class="record_actions">
    <div class="form-actions">
            <button type="submit" class="btn" onclick="self.location.href='{{ path('news')}}'">Back to the list</button>
          
    
 
                {% if is_granted('ROLE_COMMUNICATION') %}
        <form action="{{ path('news_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
        {% endif%}
</ul>
    
{% endblock %}
